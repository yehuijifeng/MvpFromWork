<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/padding_and_margin_xxx"
    android:paddingLeft="@dimen/padding_and_margin_xxx">

    <LinearLayout
        android:id="@+id/loading_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@drawable/bg_default_loading"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prompt_title_text"
                style="@style/default_textview_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_xxx"
                android:text="@string/on_prompt" />

            <TextView
                android:id="@+id/prompt_content_text"
                style="@style/default_textview_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/on_content"
                android:textSize="@dimen/text_size_xx" />
        </LinearLayout>

        <include layout="@layout/dialog_default_button_view" />
    </LinearLayout>
</RelativeLayout>